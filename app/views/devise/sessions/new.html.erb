<div class="col-lg-12">
  <div class="page-header">
    <h1>Log in</h1>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :account, :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.text_field :account, autofocus: true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :remember_me, :class => "col-lg-3 control-label" %>
    <div class="col-lg-9">
      <%= f.check_box :remember_me %>
    </div>
  </div>

  <div class="actions set-right">
    <%= f.submit "Log in", :class => "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %>
