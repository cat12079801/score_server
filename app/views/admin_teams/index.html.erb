<table>
  <thead>
    <tr>
      <th>チーム名</th>
      <th>回答済み</th>
      <th>得点</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.solved_problem %></td>
        <td><%= team.point %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for @team, :url => {:controller => 'admin_teams'} do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label 'NEWチーム名' %>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
