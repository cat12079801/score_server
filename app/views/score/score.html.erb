<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>No</th>
          <th>Screen Name</th>
          <th>Points</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each.with_index(1) do |user, i| %>
          <tr>
            <td><%= i %></td>
            <td>@<%= user.screen_name %></td>
            <td><%= user.point %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-2"></div>
</div>
