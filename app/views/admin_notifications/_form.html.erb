<% action = controller.action_name == 'new' ? 'create' : 'update' %>
<%= form_for @admin_notification, :url => {:controller => 'admin_notifications', :action => action}, :class => "form-horizontal" do |f| %>
  <% if @admin_notification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_notification.errors.count, "error") %> prohibited this admin_notification from being saved:</h2>

      <ul>
      <% @admin_notification.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'タイトル', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control", :placeholder => "title" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label '本文', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => "form-control", :placeholder => "description" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label '関係する問題', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <select name="notification[problem_id]" id="notification_problem_id" class="form-control">
        <option>問題を選んでね</option>
      <% @problems.each do |problem| %>
        <option value="<%= problem.id %>">No.<%= problem.id %>  <%= problem.title %></option>
      <% end %>
      </select>
    </div>
  </div>

  <div class="actions set-right">
    <%= f.submit 'Submit', :class => "btn btn-primary margin-top" %>
    <%= link_to 'Back', admin_notifications_path, :class => "btn btn-default margin-top" %>
  </div>
<% end %>
