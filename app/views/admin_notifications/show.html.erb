<p id="notice"><%= notice %></p>

<div class="page-header">
  <span>
  <h1 style="display: inline"><%= @admin_notification.title %></h1>
</span>
</div>

<div class="jumbotron">
  <%= @admin_notification.description.html_safe %>
</div>

<div class="row">
  <div class="col-sm-3">
    <div class="btn-group btn-group-justified next">
      <%= link_to 'Go ' + @admin_notification.problem.title, admin_problem_path(@admin_notification.problem), {:class => "btn btn-default"} if @admin_notification.problem.present? %>
    </div>
  </div>
  <div class="col-sm-6"></div>
  <div class="col-sm-3">
    <div class="btn-group btn-group-justified next">
      <%= link_to 'Edit', edit_admin_notification_path(@admin_notification), {:class => "btn btn-default"} %>
      <%= link_to 'Back', admin_notifications_path, {:class => "btn btn-default"} %>
    </div>
  </div>
</div>
