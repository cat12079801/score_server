<p id="notice"><%= notice %></p>

<div class="page-header">
  <span>
  <h1 style="display: inline"><%= @admin_problem.title %></h1>
  <p style="display: inline; font-size: 38px"><%= @admin_problem.genre.name %>/<%= @admin_problem.point %></p>
  <% if @admin_problem.opened %>
    <span class="label label-primary">公開済</span>
  <% else %>
    <span class="label label-danger">未公開</span>
  <% end %>
  <% if @admin_problem.user.present? %>
    <span class="label label-success">正解者あり</span>
  <% end %>
</span>
</div>

<div class="jumbotron">
  <%= @admin_problem.question %>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title">答え</h3>
      </div>
      <div class="panel-body">
        <%= @admin_problem.flag %>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">正解者</h3>
      </div>
      <div class="panel-body">
        <%= @admin_problem.users.pluck(:account).join(', ') %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-9"></div>
  <div class="col-sm-3">
    <div class="btn-group btn-group-justified next">
      <%= link_to 'Edit', edit_admin_problem_path(@admin_problem), {:class => "btn btn-default"} %>
      <%= link_to 'Back', admin_problems_path, {:class => "btn btn-default"} %>
    </div>
  </div>
</div>

