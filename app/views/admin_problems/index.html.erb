<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>問題名</th>
      <th>得点</th>
      <th>ジャンル</th>
      <th>公開</th>
      <th>最速正答者</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_problems.each do |admin_problem| %>
      <tr>
        <td><%= admin_problem.title %></td>
        <td><%= admin_problem.point %></td>
        <td><%= admin_problem.genre.name %></td>
        <td><%= '済' if admin_problem.opened %></td>
        <td><%= admin_problem.user.account if admin_problem.user.present? %></td>
        <td><%= link_to '詳細', admin_problem_path(admin_problem) %></td>
        <td><%= link_to '編集', edit_admin_problem_path(admin_problem) %></td>
        <td><%= link_to '削除', admin_problem_path(admin_problem), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table> 

<br>

<div class="set-right">
<%= link_to 'New Problem', new_admin_problem_path, {:class => "btn btn-primary btn-lg"} %>
</div>
