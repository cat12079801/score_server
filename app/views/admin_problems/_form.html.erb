<%= form_for @admin_problem, :url => {:controller => 'admin_problems'}, :class => "form-horizontal" do |f| %>
  <% if @admin_problem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_problem.errors.count, "error") %> prohibited this admin_problem from being saved:</h2>

      <ul>
      <% @admin_problem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label '問題名', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control", :placeholder => "problem name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label '問題文', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :question, :class => "form-control", :placeholder => "problem description" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'フラグ', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :flag, :class => "form-control", :placeholder => "flag" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label '得点', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :point, :class => "form-control", :placeholder => "100" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'ジャンル', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <select name="problem[genre_id]" id="problem_genre_id" class="form-control">
      <% @genres.each do |genre| %>
        <option value="<%= genre.id %>"><%= genre.name %></option>
      <% end %>
    </select>
    </div>
  </div>

  <div class="form-group">
    <%= f.label '公開', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.check_box :opened, {}, true, false %>
    </div>
  </div>

  <div class="actions" style="text-align: right">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to 'Back', admin_problems_path, :class => "btn btn-default" %>
  </div>
<% end %>
